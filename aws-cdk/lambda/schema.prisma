generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String       @id
  username             String       @unique
  password             String
  playbackSpeed        Float
  translateLang        String
  transcribeLang       String
  transcribeCutOffType String       @default("auto")
  transcripts          Transcript[]
  createdAt            DateTime
  updatedAt            DateTime
}

model Transcript {
  id         String           @id
  title      String
  preview    String
  createdAt  DateTime
  updatedAt  DateTime
  partsOrder String[]
  user       User             @relation(fields: [userId], references: [id])
  userId     String
  partsUrl   String
}
