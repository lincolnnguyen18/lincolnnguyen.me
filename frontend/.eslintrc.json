{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "comma-dangle": ["error", "always-multiline"],
        "indent": ["error", 2],
        "no-unused-vars": [ "error", { "vars": "all", "args": "all", "ignoreRestSiblings": false, "varsIgnorePattern": "^_" } ],
        "space-before-function-paren": ["error", "always"],
        "space-before-blocks": ["error", "always"],
        "react/prop-types": "off"
    }
}
